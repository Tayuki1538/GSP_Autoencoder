{
    "name": "GSP_Autoencoder",
    "n_gpu": 1,

    "arch": {
        "type": "GSPCNNAEModel",
        "args": {
            "is_positioning": false
        }
    },
    "data_loader": {
        "type": "GSPDataLoader",
        "args":{
            "batch_size": 1024,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2,
            "pre_training": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mean_squared_error",
    "metrics": [
        "root_mean_squared_error"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "factor": 0.1,
            "patience": 10,
            "threshold": 1e-4,
            "threshold_mode": "rel",
            "cooldown": 0,
            "min_lr": 0,
            "eps": 1e-08,
            "verbose": true
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "/dbfs/mnt/mnt_wg3-1/mita/GSP_Autoencoder/model",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": true
    },
    "wandb": true
}
